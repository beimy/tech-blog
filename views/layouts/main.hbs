    {{#if mainCSS }}
      <link rel="stylesheet" href="/css/style.css">
    {{/if}}

    {{#if errorCSS}}
      <link rel="stylesheet" href="/css/404.css">
    {{/if}}

    {{#if adminCSS}}
      <link rel="stylesheet" href="/css/admin.css">
    {{/if}}

    

</head>

  <body>

    {{#if userNav}}
      {{ user_nav }}
    {{/if}}

    {{#if adminNav}}
      {{> adminNav }}
    {{/if}}

    <main>

      {{{ body }}}

    </main>

    <footer>
      {{#if user}}
        {{> userFooter}}
      {{/if}}

      {{#if admin}}
        {{> adminFooter }}
      {{/if}}
    </footer>

  {{#if createPostCSS}}
  <script src="/javascript/create-post.js"></script>
  {{/if}}
