  {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    <script src="/javascript/side-bar-loggedIn.js"></script>
  {{else}}
    <script src="/javascript/side-bar-nouser.js"></script>
  {{/if}}


  {{#if errorJS }}
    <script src="/javascript/404.js"></script>
  {{/if }}

  {{#if userNav}}
    <script src="/javascript/searchbar-homepage.js"></script>
  {{/if}}

  {{#if mainJS }}
    <script src="/javascript/main.js"></script>
  {{/if}}


</body>

</html>