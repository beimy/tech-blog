<div class="container-sm m-0 p-5">
    <div class="row d-flex">
        <ul class="col-2 post-list">
            {{#each posts as |post|}}
            <li>
                {{> user-post-info post}}
            </li>
            {{/each}}
        </ul>

        <ul class="col m-2" id="post-col">
            {{#each posts as |post|}}
            <li>
                {{> post-content post}}
            </li>
            {{/each}}
        </ul>

        {{> side-bar}}
    </div>
</div>
